<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Iridium.WPFClient.UserControls"
        xmlns:wpfClient="clr-namespace:Iridium.WPFClient"

        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Iridium.WPFClient.MainWindow"

        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <wpfClient:StartPage x:Name="StartPage"/>
        <wpfClient:GetGamesControl x:Name="GamesControl" Margin="0,0,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Center" d:IsHidden="True"/>
        <wpfClient:GetLevelsControl x:Name="LevelsControl" Margin="0,0,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Center" d:IsHidden="True"/>
        <controls:CodeEditControl x:Name="CodeEditControl" Margin="0,0,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Center" d:IsHidden="True"/>
    </Grid>
</Window>
